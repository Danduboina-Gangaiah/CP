//Insertion sort is nothing but particular element we need to place in the right place at left hand.
//left hand side elements are already sorted we need to sort only right hand side elements so we need to figure out the correct place in left hand side where this element is fit.


//CODE IN JAVA

import java.util.*;
import java.lang.*;
import java.io.*;

class CP
{
    public static void insertionSort(int arr[])
    {
        int n=arr.length;
        for(int i=0;i<n;i++)
        {
            int j=i-1;
            int key=arr[i];
            while(j>=0 && arr[j]>key)
            {
                arr[j+1]=arr[j];
                j--;
            }
            arr[j+1]=key;
        }
    }
	public static void main (String[] args) throws java.lang.Exception
	{
	    int arr[]={8,7,6,5,4,3};
	    insertionSort(arr);
	    System.out.println(Arrays.toString(arr));
	}
}
